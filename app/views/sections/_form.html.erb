
<%#= render(:partial => 'shared/error_messages', :locals=>{:object => @section}) %>


<%=error_messages_for(@section) %>


<table summary="Section form fields">
			<tr>
				<th><%=f.label(:name)%></th>
				<td><%=f.text_field(:name) %></td>
			</tr>
			
			
			
			<tr>
				<th><%=f.label(:position)%></th>
				<td><%= f.select(:position, 1..@section_count,{},{} ) %></td>
				<%# WARNING!!! 1...@section_count caused error because "..." range is different from ".." range %>
			</tr>
			
			<tr>
				<th><%=f.label(:visible)%></th>
				<td>
					<%#= f.text_field(:visible) %>
					
					<%= f.check_box(:visible) %>
				
				</td>
			</tr>
			
			<tr>
				<th><%=f.label(:page_id,"Parent Page")%></th>
				<td>
					<%#= f.text_field(:page_id) %>
					
					<%=f.select( :page_id, Page.all.collect {|p| [p.name, p.id]}  ) %>
					
				</td>
			</tr>
			
			
			<tr>
				<th><%=f.label(:content_type)%></th>
				<td>
					<%#=f.text_field(:content_type) %>
					<%= f.radio_button(:content_type, 'text') %> Text
					<%= f.radio_button(:content_type, 'suggestion') %> Suggestion
					<%= f.radio_button(:content_type, 'task') %> Task
					<%= f.radio_button(:content_type, 'HTML') %> HTML

				
				</td>
			</tr>
			
			<tr>
				<th><%=f.label(:content)%></th>
				<td><%=f.text_area(:content, :cols=>'40', :rows=>'10') %></td>
			</tr>
			
			
		</table>