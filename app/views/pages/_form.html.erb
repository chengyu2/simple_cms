<%#= render(:partial => 'shared/error_messages', :locals=>{:object => @page}) %>

<%=error_messages_for(@page) %>


<table summary="Page form fields">
			
			<tr>
				<th><%=f.label(:subject_id, "Parent Subject")%></th>
				<td>
					<%#= f.text_field(:subject_id) %>
					
					<%=f.select(:subject_id, Subject.all.collect {|s| [s.name, s.id] }) %>
					
				</td>
			</tr>
			
			
			<tr>
				<th><%=f.label(:name)%></th>
				<td><%=f.text_field(:name) %></td>
			</tr>
			
			
			<tr>
				<th><%=f.label(:position)%></th>
				<td><%= f.select(:position, 1..@page_count) %></td>
			</tr>
			
			
			<tr>
				<th><%=f.label(:permalink)%></th>
				<td><%= f.text_field(:permalink) %></td>
			</tr>
			
			
			
			<tr>
				<th><%=f.label(:visible)%></th>
				<td>
					<%#= f.text_field(:visible) %>
					
					<%= f.check_box(:visible) %>
				
				</td>
			</tr>
		</table>